pipeline  {
  agent any

  parameters {
    string(name: 'COMPONENT', defaultValue: '', description: 'component name')
    choice(name: 'ENV', choices: ['dev', 'qa', 'prod'], description: 'Pick environment')
    string(name: 'TAG_NAME', defaultValue: '', description: 'specify the version')
    }
  environment {
    SSH= credentials('SSH')
     }
    stages {
      stage ('deploy to dev environment') {
        steps {
          sh """
            git branch: 'main', url: 'https://github.com/devopsravi9/roboshop-ansible.git'
            cd ansible
          """
          }
        }
      stage ('deploy to any env') {
        steps {
          sh "ansible-playbook -i dev-inv.robo robo.yml -e ansible_user=${SSH_USR} -e ansible_password=${SSH_PSW} -e ROLE=${COMPONENT}  -e HOST=$( echo ${COMPONENT} | tr [:lower:] [:upper:]) -e ENV=${ENV} -e TAG_NAME=${TAG_NAME}"


          }
        }
      }
    }
